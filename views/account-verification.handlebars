	<h2 class="page-header">Verify Account</h2>
  {{#if errors}}
  {{#each errors}}
  <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
  {{/if}}
  <form method="post" action="/users/account-verification">
    <div class="form-group">
      <label>Account Verification Code</label>
      <input type="text" class="form-control" name="verificationCode" placeholder="Verification Code">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>

  <form method="post" action="/users/send-verification-code">
    <div class="form-group">
    </div>
    <button type="submit" class="btn btn-default">Resend verification code</button>
  </form>